{
  "name": "smart-navigator-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Navigator",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.6.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "preset": "@babel/preset-env",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
